<%= form_with(model: @shoe, class: 'edit_shoe', local: true) do |f|%>
    <%= f.label :brand %>
    <%= f.text_field :brand %><br><br>
    <%= f.label :price %>
    <%= f.number_field :price, min: 0, step: 0.01 %><br><br>
    <%= f.label :color %>
    <%= f.text_field :color %><br><br>
    <%= f.label :limited_edition, "Limited Edition:" %>
    <%= f.check_box :limited_edition %> <br><br>


    <%= f.submit %>
<% end %>