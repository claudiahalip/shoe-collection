<h1>New Shoe</h1>


<%= form_with(model: @shoe, class: 'new_shoe') do |f|%>
    <%= f.label :brand %>
    <%= f.text_field :brand %><br>
    <%= f.label :price %>
    <%= f.number_field :price, min: 0, step: 0.01 %><br>
    <%= f.label :color %>
    <%= f.text_field :color %><br>


    <%= f.submit %>
<% end %>